<project name="ztsapi" default="dist" basedir=".">
	<description>
	build file
	</description>

	<!-- set global properties for this build -->
	<property name="zts.src.dir" location="..\Java_Interfaces\zts"/> 
	<property name="ztsapi.src.dir" location="..\Java_Interfaces\ifast\ztsapi"/> 
	<property name="views_api.src.dir" location="..\gen\files\views_to_build"/> 
	
	<property name="bin" location="..\bin"/>
	<property name="bin.ztsapi" location="..\bin\ztsapi"/>
	<property name="doc" location="..\bin\docs\reference"/>
  
	<path id="classpath">
		<fileset dir="..\bin">
			<include name="commons-codec-1.3.jar" />
			<include name="dom4j.jar" />
			<include name="log4j-1.2.15.jar" />
			<include name="sonic_Client.jar" />
			<include name="sonic_Client_ext.jar" />
			<include name="sonic_XMessage.jar" />
			<include name="xalan.jar" />
			<include name="xercesImpl.jar" />
			<include name="xmlParserAPIs.jar" />
		</fileset>
	</path>	

	<target name="clean" description="clean up">
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete file="..\bin\SSII_JavaAPI_ZTS_Rel_.zip"/>
		<delete file="..\bin\ztsapi.jar"/>
		<delete dir="..\docs\reference"/>
		<delete dir="${bin.ztsapi}"/>
	</target>
  
	<target name="init" depends="clean">
		<!-- Create the time stamp -->
		<tstamp/>
		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${bin.ztsapi}"/>
	</target>

	<target name="compile" depends="init">
		<javac includeantruntime="false" destdir="${bin.ztsapi}" includes="**/*.java" encoding="iso-8859-1" classpathref="classpath">
           <src path="${zts.src.dir}" />
           <src path="${ztsapi.src.dir}" />
           <src path="${views_api.src.dir}" />
        </javac>
	</target>

	<!-- Generate javadocs for current project into ${doc.dir} -->
	<target name="doc" depends="compile">
		<javadoc packagenames="classpath" sourcepath="${zts.src.dir}" destdir="${doc}" encoding="iso-8859-1">
		<fileset dir="${zts.src.dir}">
			<include name="**" />
		</fileset>
		</javadoc>
	</target>  
	
	<target name="dist" depends="doc" description="generate the distribution">
		<!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
		<jar jarfile="${bin}/ztsapi.jar" basedir="${bin}/ztsapi"/>
		<zip destfile="SSII_JavaAPI_ZTS_Rel_.zip" basedir="${bin}" />
	</target>
</project>